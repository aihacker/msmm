<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="134dp"
    android:paddingLeft="10dp"
    android:layout_marginTop="15dp"
    android:background="#ffffff"
    android:paddingRight="10dp">

    <com.d2956987215.mow.widgets.ShapedImageView
        android:id="@+id/iv_pic"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/la_hehe"
        android:scaleType="centerCrop"
        android:src="@mipmap/da_tu"
        test:round_radius="8dp"
        test:shape_mode="round_rect" />

    <RelativeLayout
        android:id="@+id/la_hehe"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/iv_pic"
        android:orientation="vertical"
        android:paddingLeft="10dp">


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="煲仔饭"
            android:textColor="@color/First"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:text="意向客户成交的十种技巧 - 意向客户成交的十
种技巧 苦于思索如何成交? 一、请求成交..."
            android:textColor="#ff333333"
            android:textSize="11sp" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_redchunxiao"
            android:gravity="center"
            android:text="热点"
            android:textColor="#ffffffff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_liulan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/tv_dianzan"
            android:drawableLeft="@mipmap/greenhand_view"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="999+"
            android:textColor="#ff999999"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_dianzan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/greenhand_like"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="999+"
            android:textColor="#ff999999"
            android:textSize="10sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/la_hehe"
        android:layout_marginTop="6dp"
        android:background="@color/line" />

</RelativeLayout>