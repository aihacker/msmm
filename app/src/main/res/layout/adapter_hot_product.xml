<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="134dp"
    android:layout_marginTop="15dp"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <com.d2956987215.mow.widgets.ShapedImageView
        android:id="@+id/iv_pic"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/da_tu"
        test:round_radius="8dp"
        test:shape_mode="round_rect" />

    <RelativeLayout
        android:id="@+id/la_hehe"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/iv_pic"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="8dp">


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:ellipsize="end"
            android:lineSpacingExtra="1dp"
            android:maxLines="2"
            android:text="煲仔饭煲仔饭煲仔饭煲仔饭煲仔饭煲仔饭煲仔饭煲仔饭煲仔饭煲仔饭煲仔饭"
            android:textColor="@color/First"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/la_quan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:gravity="center_vertical"
            android:paddingBottom="-5dp">

            <TextView
                android:id="@+id/tv_quancount"
                android:layout_width="54dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:background="@mipmap/home_bg_ticket"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="￥20"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_yishou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="已售:3.4566万"
                android:textColor="#666666"
                android:textSize="12sp" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_nowprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/la_quan"
            android:layout_marginTop="3dp"
            android:text="￥29.9"
            android:textColor="#fffd4964"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/la_quan"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_nowprice"
            android:text="￥39.9"
            android:textColor="#ff999999"
            android:textSize="13sp" />


        <com.d2956987215.mow.widgets.ShapedImageView
            android:id="@+id/iv_logo"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            test:round_radius="6dp"
            test:shape_mode="round_rect" />

        <LinearLayout
            android:id="@+id/la_shengji"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_above="@+id/la_fenxiang"
            android:layout_alignParentRight="true"
            android:background="@mipmap/home_btn_upgrade"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shengji_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="升级赚"
                android:textColor="#FFFFFF"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_shengji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥888.88"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/la_fenxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:background="@mipmap/home_btn_share"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fenxiang_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="领券"
                android:textColor="#FFFFFF"
                android:textSize="9sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_fenxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥888.88"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_dianming"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/la_fenxiang"
            android:layout_toRightOf="@+id/iv_logo"
            android:singleLine="true"
            android:text="官方旗舰店"
            android:textColor="#ff999999"
            android:textSize="11sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/la_hehe"
        android:layout_marginTop="6dp"
        android:background="@color/line" />

</LinearLayout>