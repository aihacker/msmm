<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="15dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.d2956987215.mow.widgets.ShapedImageView
            android:id="@+id/iv_logo"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            test:round_radius="6dp"
            test:shape_mode="round_rect" />


        <TextView
            android:id="@+id/tv_pinlei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_logo"
            android:textColor="#ff333333"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2018-09-11 22:51:21 创建"
            android:textColor="#ff666666"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_image"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp">

        <com.d2956987215.mow.widgets.ShapedImageView
            android:id="@+id/iv_pic"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/da_tu"
            test:round_radius="8dp"
            test:shape_mode="round_rect" />

        <RelativeLayout
            android:id="@+id/la_hehe"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/iv_pic"

            android:orientation="vertical"
            android:paddingLeft="10dp">


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:maxLines="2"
                android:text="煲仔饭"
                android:textColor="@color/First"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/tv_liulan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="浏览次数:0"
                android:textColor="#ff999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_nowprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_liulan"
                android:layout_marginTop="10dp"
                android:text="￥29.9"
                android:textColor="#fffd4964"
                android:textSize="16sp" />

        </RelativeLayout>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/la_hehe"
        android:layout_marginTop="10dp"
        android:background="#F4F8FB" />

</LinearLayout>