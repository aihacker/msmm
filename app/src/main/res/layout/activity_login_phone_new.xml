<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/transparent_statusbar_fit"
    tools:context=".activity.login.PasswordActivity">

    <include layout="@layout/include_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="19dp"
        android:text="请输入手机号"
        android:textColor="#ff2d2d2d"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入"
            android:textColor="#ff999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:textColor="#ffff528b"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="#ff999999"
            android:textSize="13sp" />


    </LinearLayout>




    <LinearLayout
        android:id="@+id/cl_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_dl">

        <TextView
            android:id="@+id/tv_area_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="9dp"
            android:text="+86"
            android:textColor="#ff666666"
            android:textSize="13sp"
            app:layout_goneMarginRight="33dp" />

        <EditText
            android:id="@+id/et_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号码"
            android:textColor="#ff666666"
            android:textColorHint="#ff999999"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_del_phone"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/et_del"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_select_area"
            android:layout_width="75dp"
            android:layout_height="21dp"
            android:layout_gravity="right"
            android:layout_marginRight="42dp"
            android:background="@drawable/bt_area"
            android:text="切换国家"
            android:textColor="#ff333333"
            android:textSize="12sp"

            />
    </LinearLayout>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="#f2f2f2"
        android:layout_marginTop="10dp"
        />


    <Button
        android:id="@+id/bt_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="33dp"
        android:background="@drawable/bt_login_next"
        android:text="下一步"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:gravity="bottom|center"
        android:layout_gravity="bottom"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册或登录即代表您已同意"
            android:textColor="#ff999999"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_xy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《买手妈妈协议》"
            android:textColor="#FF528B"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>