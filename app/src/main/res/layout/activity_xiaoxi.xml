<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    style="@style/transparent_statusbar_fit"
    android:orientation="vertical">

    <include layout="@layout/include_header" />

    <com.d2956987215.mow.widgets.MyRadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">



            <RadioButton
                android:id="@+id/main_qiuzhi"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_color"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="奖金消息"
                android:textSize="14sp"
                android:textColor="@drawable/selector_textcolor" />




            <RadioButton
                android:id="@+id/main_zhaopin"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_color"
                android:button="@null"
                android:gravity="center"
                android:text="系统消息"
                android:textColor="@drawable/selector_textcolor" />

    </com.d2956987215.mow.widgets.MyRadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
