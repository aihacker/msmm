<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_chang"
        app:layout_scrollFlags="scroll" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_scrollFlags="scroll">


        <RelativeLayout
            android:id="@+id/la_qianggou"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_scrollFlags="scroll">


            <ImageView
                android:id="@+id/iv_qiang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_scrollFlags="scroll" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                app:layout_scrollFlags="scroll">

                <TextView
                    android:id="@+id/tv_remain_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/shape_qianggou_remain_time_bg"
                    android:padding="1dp"
                    android:text="00"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    app:layout_scrollFlags="scroll" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:text=":"
                    android:textColor="#FD4964"
                    android:textSize="12sp"
                    app:layout_scrollFlags="scroll" />

                <TextView
                    android:id="@+id/tv_remain_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/shape_qianggou_remain_time_bg"
                    android:padding="1dp"
                    android:text="00"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    app:layout_scrollFlags="scroll" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:text=":"
                    android:textColor="#FD4964"
                    android:textSize="12sp"
                    app:layout_scrollFlags="scroll" />

                <TextView
                    android:id="@+id/tv_remain_miao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/shape_qianggou_remain_time_bg"
                    android:padding="1dp"
                    android:text="00"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    app:layout_scrollFlags="scroll" />


            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/line_chang"
            app:layout_scrollFlags="scroll" />


        <ImageView
            android:id="@+id/iv_juhua"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:layout_scrollFlags="scroll" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_chang"
        app:layout_scrollFlags="scroll" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_scrollFlags="scroll">


        <ImageView
            android:id="@+id/iv_bao"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:layout_scrollFlags="scroll" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/line_chang"
            app:layout_scrollFlags="scroll" />


        <ImageView
            android:id="@+id/iv_dapai"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:layout_scrollFlags="scroll" />


    </LinearLayout>


</LinearLayout>