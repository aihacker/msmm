<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    style="@style/transparent_statusbar_fit"
    tools:context=".activity.home.TransposeActivity">

    <include layout="@layout/include_header" />

    <LinearLayout
        android:id="@+id/ll_tip"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#fffff3f7"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="18dp">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/link" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:text="通过转换后链接所产生的订单才能计入到您的佣金中"
            android:textColor="#ff333333"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_del_tip"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:src="@mipmap/close_link" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="22dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingLeft="15dp">

        <EditText
            android:id="@+id/et_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请将您要推广的商品链接(文案+链接)或CPS推广链接（
文案+链接）粘贴到这里，请确保链接粘贴完整"
            android:paddingTop="3dp"
            android:minLines="1" />

        <TextView
            android:id="@+id/tv_link_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_clear"
            android:layout_gravity="right"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="159dp"
            android:layout_marginTop="50dp"
            android:text="清空"
            android:textColor="#ff333333"
            android:textSize="12sp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_start_link"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:background="@drawable/bt_login_next"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_start_link"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:background="@mipmap/link" />

        <TextView
            android:id="@+id/tv_start_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="转换成我的链接"
            android:textColor="#ff333333"
            android:textSize="15sp" />


    </LinearLayout>

</LinearLayout>