<?xml version="1.0" encoding="utf-8"?><!-- 闹铃起闹时弹出对话框的布局文件 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_alarmAlert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="分享至"
        android:textColor="#ff333333"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pengyouquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/share_circle"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="#ff333333"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@mipmap/share_weixn"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="微信"
            android:textColor="#ff333333"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:drawableTop="@mipmap/share_weibo"
            android:drawablePadding="5dp"
            android:text="微博"
            android:textColor="#ff333333"
            android:textSize="11sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/share_qq"
            android:drawablePadding="5dp"
            android:text="手机QQ"
            android:textColor="#ff333333"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_kongjian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@mipmap/share_square"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="QQ空间"
            android:textColor="#ff333333"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_fuzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableTop="@mipmap/share_link"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="复制链接"
            android:textColor="#ff333333"
            android:textSize="11sp" />
    </RelativeLayout>


</LinearLayout>













