<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    style="@style/transparent_statusbar_fit"
    android:orientation="vertical"
    tools:context=".activity.home.TransposeActivity">

    <include layout="@layout/include_header" />

    <LinearLayout
        android:id="@+id/ll_tip"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#fffff3f7"
        android:gravity="center|left"

        android:orientation="horizontal"
        android:paddingLeft="18dp">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/link" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:text="通过转换后链接所产生的订单才能计入到您的佣金中"
            android:textColor="#ff333333"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_del_tip"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:src="@mipmap/close_link" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:text="转换后的链接"
        android:textColor="#ff333333"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="【京东】隐形内增高鞋男 时尚运动男士增高鞋 运动休闲
韩版鞋男鞋跑步鞋子 G10白色-网面 40码增高8cm
————————
京东价：¥139.00
抢购链接：https://u.jd.com/0zc50j"

        />

    <TextView
        android:id="@+id/tv_link_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_clear_red"
        android:layout_gravity="right"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="159dp"
        android:layout_marginTop="50dp"
        android:text="复制链接"
        android:textColor="#ffff528b"
        android:textSize="12sp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:background="#F2F2F2"
            android:text="转链有效期为60天，请不要修改链接，以免无法跟单，给您造成收
入损失。
联盟仅提供技术支持，请确保分享内容真实合法。"
            android:textColor="#ff999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#FF528B"
            android:gravity="center"
            android:text="立即分享"
            android:textColor="#fffffefe"
            android:textSize="15sp" />

    </LinearLayout>


</LinearLayout>