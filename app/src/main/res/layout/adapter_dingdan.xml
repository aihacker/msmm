<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="#F4F8FB" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/iv_fromType"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_tianmao" />

        <TextView
            android:id="@+id/tv_fromName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_fromType"
            android:textColor="@color/text_deep"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_zhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="订购失效"
            android:textColor="#fffd4964"
            android:textSize="13sp" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EEEEEE" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <com.d2956987215.mow.widgets.ShapedImageView
            android:id="@+id/iv_pic"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/da_tu"
            test:round_radius="8dp"
            test:shape_mode="round_rect" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_pic"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/First"
            android:textSize="13dp"
            tools:text="煲仔饭" />

        <TextView
            android:id="@+id/tv_yugu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_pic"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="36dp"
            android:layout_toRightOf="@+id/iv_pic"
            android:text="消费预估：￥5.9"
            android:textColor="#ffffaa3b"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_danhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_pic"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="36dp"
            android:layout_toRightOf="@id/tv_yugu"
            android:text="返还1.24元"
            android:textColor="#ff333333"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/tv_dingdan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_yugu"
            android:layout_below="@+id/rl_time"
            android:layout_marginTop="12dp"
            android:text="订单号：12345789123"
            android:textColor="#ff999999"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_time"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_dingdan"
            android:background="@drawable/bg_order_copy"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="复制"
            android:textColor="#ff999999"
            android:textSize="10sp" />

        <RelativeLayout
            android:id="@+id/rl_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_pic">

            <TextView
                android:id="@+id/tv_zhuce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff666666"
                android:textSize="10sp"
                tools:text="下单日：09-11 22:51" />

            <TextView
                android:id="@+id/tv_guoqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#ff666666"
                android:textSize="10sp"
                tools:text="结算日：09-11 22:51" />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>