<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:layout_width="123dp"
    android:layout_height="123dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="15dp"
    android:background="#ffffff"
    android:paddingRight="10dp">

    <com.d2956987215.mow.widgets.ShapedImageView
        android:id="@+id/iv_pic"
        android:layout_width="123dp"
        android:layout_height="123dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/da_tu"
        test:round_radius="8dp"
        test:shape_mode="round_rect" />

    <TextView
        android:id="@+id/tv_xuaqu"
        style="@style/Font12_black"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@mipmap/icon_share_select_unselect"
        android:button="@null"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="选取" />

    <TextView
        android:id="@+id/tv_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_qrcode"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="4dp"
        android:text="二维码图"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="gone" />

</RelativeLayout>