<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="360dp">

                <com.bigkoo.convenientbanner.ConvenientBanner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:canLoop="true" />

                <!--                <ImageView
                                    android:id="@+id/iv_back"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="18dp"
                                    android:src="@mipmap/detail_icon_return" />-->

                <ImageView
                    android:id="@+id/iv_feedback"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/detail_icon_feedback" />

                <ImageView
                    android:id="@+id/iv_favorite_list"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/iv_feedback"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/detail_icon_favorite" />

                <TextView
                    android:id="@+id/tv_guanggao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/la_taobao"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="所有商品都有返佣"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    android:visibility="gone" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_huiyuan"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#FFF4F6"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_high_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="90dp"
                    android:textColor="#fffd4964"
                    android:textSize="11sp"
                    tools:text="现在升级买手，最高可得佣金￥2.97" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:text="立即查看>>"
                    android:textColor="#fffd4964"
                    android:textSize="11sp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_wenzi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_jiage"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="券后"
                    android:textColor="#fffc0000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_jiage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_wenzi"
                    android:textColor="#fffc0000"
                    android:textSize="16sp"
                    tools:text="￥29.9" />

                <TextView
                    android:id="@+id/tv_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/tv_jiage"
                    android:textColor="#ff999999"
                    android:textSize="12sp"
                    tools:text="23" />

                <TextView
                    android:id="@+id/tv_yueshou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ff999999"
                    android:textSize="11sp"
                    tools:text="月销4650" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:text="加厚棉麻腰枕办公室沙发抱枕椅子靠背室沙发抱枕椅子靠背床头汽车" />

                <LinearLayout
                    android:id="@+id/ll_rules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="1px"
                        android:layout_height="37dp"
                        android:background="@mipmap/spxq_xuxian" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/forward"
                        android:text="返佣\n规则"
                        android:textColor="@color/dialog_text_color"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@mipmap/detail_bg_ticket_left"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_youhui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:textColor="#ffffffff"
                        android:textSize="17sp"
                        tools:text="30元优惠券" />

                    <TextView
                        android:id="@+id/tv_riqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_youhui"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:textColor="#ffffffff"
                        android:textSize="10sp"
                        tools:text="使用期限：2018-09-04 - 2018-09-06" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:background="@mipmap/detail_bg_ticket_right"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_lingqu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="立即领取"
                        android:textColor="#ffffffff"
                        android:textSize="14sp" />

                </RelativeLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="53dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/bg_detail_red"
                    android:gravity="center"
                    android:text="推荐词"
                    android:textColor="#fffd4964"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_tuijianci"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="16dp"
                    android:textColor="#ff666666"
                    android:textSize="12sp"
                    tools:text="牛皮鞋面，夏季出行选择一双舒适透气不会给脚负担感的鞋子，牛皮面料自然透气不闷脚！时尚鞋型设计给夏季带来一道清新的风景！" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/line" />

            <LinearLayout
                android:id="@+id/rl_shop_all_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/icon_tianmao" />

                    <TextView
                        android:id="@+id/tv_dianming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:layout_weight="1"
                        android:textColor="#ff333333"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:text="麦斯卡官方旗舰店" />

                    <TextView
                        android:id="@+id/la_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shop_gradient"
                        android:paddingBottom="5dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="5dp"
                        android:text="进入店铺"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <com.d2956987215.mow.widgets.NoScrollGridView
                    android:id="@+id/service_recycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:numColumns="3" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="15dp"
                    android:background="#EEEEEE" />

                <com.d2956987215.mow.widgets.NoScrollGridView
                    android:id="@+id/shuoming_recycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="17dp"
                    android:numColumns="4" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="——  宝贝详情  ——"
                android:textColor="#ff333333"
                android:textSize="15sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>


            <WebView
                android:id="@+id/web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_shouye"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:drawableTop="@mipmap/detail_icon_home"
            android:gravity="center"
            android:padding="3dp"
            android:text="首页"
            android:textColor="@color/six"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_shoucang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:drawableTop="@drawable/detail_icon_collect_unselect"
            android:gravity="center"
            android:padding="3dp"
            android:text="收藏"
            android:textColor="@color/six"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/ll_fenxiang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="#FE7F92"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_share_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textColor="#fffefefe"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_fenxiang_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fffefefe"
                android:textSize="12sp"
                tools:text="(赚:12.5元)" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_goumai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FD4964"
            android:gravity="center"
            android:text="领券购买"
            android:textColor="#ffffffff"
            android:textSize="14sp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:src="@mipmap/detail_icon_return" />

    <LinearLayout
        android:id="@+id/ll_copy"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp"
        android:background="@drawable/shaperight_white20"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/detail_icon_copy" />

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="复制口令"
            android:textColor="@color/six"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>
