<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/la_banzhang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.d2956987215.mow.widgets.ShapedImageView
                android:id="@+id/iv_banzhang"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img_vip_dabanzhang" />

            <TextView
                android:id="@+id/tv_banzhang_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/iv_banzhang"
                android:layout_alignBottom="@id/iv_banzhang"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:text="No:"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大班长"
                android:textColor="#ff333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_banzhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="立即购买>>"
                android:textColor="#ff999999"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>